@model Player

<h3>@Model.firstName @Model.lastName Information</h3>

<table class="table">
    <tr>
        <th>Player ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
    <tr>
        <td>@Model.id</td>
        <td>@Model.firstName</td>
        <td>@Model.lastName</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Player/UpdatePlayer/@Model.id">Update this Player</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeletePlayer", "Player", "Post"))
    {
        <input type="hidden" asp-for="id" value="@Model.id" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this player" />
    }
</div>



